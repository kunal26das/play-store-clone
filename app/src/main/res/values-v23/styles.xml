<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/whiteColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/whiteColorTransparent</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/grayColor</item>
        <item name="android:background">@color/whiteColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>
